//  Ceci est une fn JADE qui permet de génerer des étoiles bootstrap,
//exemple montrer(4)
//			for (var i = 1; i <= 4; i++)
//			****
//			for (i = 4; i < 5; i++)
//			°

mixin montrerNote(note)
	- for (var i = 1; i <= note; i++)
		span.glyphicon.glyphicon-star
	- for (i = note; i < 5; i++)
		span.glyphicon.glyphicon-star-empty




//  Ceci est une fn JADE qui permet de formater la date
//
//      exemple :

//		formatDate(2016-01-16T23:00:00.000Z)
//		var date = Sun Jan 17 2016 00:00:00 GMT+0100 (Centre de l’Europe);
//		var nomDesMois = [ "Janvier", "Fevrier", "Mars", "Avril", "Mai", "Juin","Juillet", "Aout", "Septembre", "Octobre", "Novembre", "Decembre" ];
//		var jour = 17;
//		var mois = Janvier;
//		var annee = 2016;
//		var output = 17 Janvier 2016;


mixin formatDate(dateQuiProvientDeLaBaseDeDonnees)
	-var date = new Date(dateQuiProvientDeLaBaseDeDonnees);
	-var nomDesMois = [ "Janvier", "Fevrier", "Mars", "Avril", "Mai", "Juin","Juillet", "Aout", "Septembre", "Octobre", "Novembre", "Decembre" ];
	-var jour = date.getDate();
	-var mois = nomDesMois[date.getMonth()];
	-var annee = date.getFullYear();
	-var output = jour + ' ' + mois + ' ' + annee;
	=output
